{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "./",
		"outDir": "../dist",
		"baseUrl": ".",
		"preserveConstEnums": true,
		"useDefineForClassFields": false,
		"preserveSymlinks": true,
		"skipLibCheck": true,
		"declaration": false,
		"declarationMap": false,
		"paths": {
			"#root/*": ["*"],
			"#structures/*": ["lib/structures/*"],
			"#data/*": ["lib/data/*"],
			"#types/*": ["lib/types/*"],
			"#util/*": ["lib/util/*"],
			"discord-api-types": ["../node_modules/discord-api-types"]
		}
	},
	"include": ["."]
}
